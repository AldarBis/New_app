<% provide(:title, "Edit user") %>

  <%= form_for @user, html: { multipart: true } do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.file_field :images, multiple: true %>
        <%= f.submit "Сохранить"%>
          <% @user.images.each do |image| %>
           <li><%= image_tag image.url(:thumb) %></li>
           <%= f.check_box :remove_images %>
           Remove image
          <% end %>
          <p>
          <!--<%= @user.attributes %>-->
          
       
          </p>
    </p>
  <% end %> 